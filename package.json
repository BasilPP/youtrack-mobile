{
  "name": "YouTrackMobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "./node_modules/react-native-cli/index.js start",
    "start-webpack": "rnws start",
    "bundle": "rnws bundle",
    "test": "jest",
    "test:watch": "nodemon -w __tests__ -w ./src -e js,jsx -x npm test",
    "lint": "eslint src",
    "ios-build": "xcodebuild  -project ios/YouTrackMobile.xcodeproj -scheme YouTrackMobile -sdk iphonesimulator -destination platform='iOS Simulator',name='iPhone 5s' -derivedDataPath ios/build",
    "ios-launch-sim": "xcrun instruments -w 'iPhone 5s (9.2)'",
    "ios-install-app": "xcrun simctl install booted ios/build/Build/Products/Debug-iphonesimulator/YouTrackMobile.app",
    "ios-launch-installed": "xcrun simctl launch booted org.jetbrains.YouTrackMobile",
    "ios": "npm run ios-build && npm run ios-launch-sim || npm run ios-install-app && npm run ios-launch-installed",
    "android": "./node_modules/react-native-cli/index.js run-android",
    "android-release": "cd android && ./gradlew assembleRelease | cd ../",
    "android-emulator": "emulator -avd YouTrackMobile -scale 0.4 -gpu on -memory 2048",
    "android-emulator-create": "android create avd -n YouTrackMobile -t 1 -b x86 --skin 1080x1920 --device 'Nexus 5'",
    "android-emulator-delete": "android delete avd -n YouTrackMobile"
  },
  "jest": {
    "scriptPreprocessor": "__tests__/jestSupport/preprocessor.js",
    "setupEnvScriptFile": "node_modules/react-native/jestSupport/env.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "packager/react-packager/src/Activity/"
    ],
    "testFileExtensions": [
      "test.js"
    ],
    "unmockedModulePathPatterns": [
      "promise",
      "source-map"
    ]
  },
  "dependencies": {
    "base64-js": "0.0.8",
    "qs": "6.1.0",
    "react-native": "0.20.0-rc1",
    "react-native-image-picker": "0.13.5",
    "react-native-keychain": "0.2.7",
    "react-native-router-flux": "2.0.9",
    "relative-date": "^1.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.3.17",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-config-defaults": "^8.0.2",
    "eslint-plugin-react": "^3.15.0",
    "eslint-plugin-react-native": "^0.5.0",
    "file-loader": "0.8.5",
    "jest-cli": "0.8.2",
    "nodemon": "1.8.1",
    "react-native-cli": "0.1.7",
    "react-native-webpack-server": "^0.8.3",
    "url-loader": "0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  }
}
